{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "module": "ESNext",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "esm", "cjs"]
}
